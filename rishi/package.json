{
  "name": "rishi-rhythm-app",
  "version": "1.0.0",
  "description": "A comprehensive Vedic lifestyle application with mantras, hora calculation, and visual audio effects",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite --host 0.0.0.0 --port 3000",
    "build:mobile": "vite build --base=./",
    "cordova:init": "cordova create mobile com.rishirhythm.app RishiRhythm",
    "cordova:prepare": "npm run build:mobile && cp -r dist/* mobile/www/",
    "cordova:android": "cd mobile && cordova platform add android",
    "cordova:ios": "cd mobile && cordova platform add ios",
    "cordova:build:android": "cd mobile && cordova build android",
    "cordova:build:ios": "cd mobile && cordova build ios",
    "cordova:run:android": "cd mobile && cordova run android",
    "cordova:run:ios": "cd mobile && cordova run ios",
    "mobile:setup": "npm run cordova:init && npm run cordova:android && npm run cordova:ios && npm run cordova:prepare",
    "mobile:build": "npm run build:mobile && npm run cordova:prepare && cd mobile && cordova build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "cordova": "^12.0.0",
    "vite": "^5.0.8"
  },
  "keywords": [
    "vedic",
    "mantra",
    "hora",
    "meditation",
    "rishi",
    "mobile",
    "android",
    "ios"
  ],
  "author": "Rishi Rhythm Team",
  "license": "MIT",
  "cordova": {
    "platforms": [
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-device": {},
      "cordova-plugin-geolocation": {},
      "cordova-plugin-media": {},
      "cordova-plugin-file": {},
      "cordova-plugin-whitelist": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-statusbar": {}
    }
  }
}
